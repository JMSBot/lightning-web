<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>Lightning</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        {% stylesheets filter='lessphp'
            '@LightningApiBundle/Resources/less/normalize.less'
            '@LightningApiBundle/Resources/less/*.less' %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
    </head>
    <body>
        <h1><a href="">Lightning</a><span class="loading">...</span></h1>
        <div id="container"></div>
        <div id="user"></div>
        <script>
            var Lightning = Lightning || {};
            Lightning.URL_LISTS = '{{ path('lightning_api_list_index') }}';
            Lightning.URL_ACCOUNT = '{{ path('lightning_api_account_index', {'code': code}) }}';
        </script>
        {% javascripts
            '@SonatajQueryBundle/Resources/public/jquery-1.8.0.js'
            '@LightningApiBundle/Resources/public/js/*'
            '../vendor/jms/twig-js/twig.js'
        %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
        {% javascripts filter='twig_js' '@LightningApiBundle/Resources/views/List/index.html.twig' %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
    </body>
</html>
