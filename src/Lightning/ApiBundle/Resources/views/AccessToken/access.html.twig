<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>Lightning</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        {% stylesheets filter='lessphp'
            '@LightningApiBundle/Resources/less/normalize.less'
            '@LightningApiBundle/Resources/less/*.less'
        %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
    </head>
    <body>
        <p class="back"><a href="">Back</a></p>
        <h1>
            <span class="title">Lightning</span>
            <span class="loading">...</span>
        </h1>
        <div id="container"></div>
        <div id="user"></div>
        <script>
            var Lightning = Lightning || {};
            Lightning.URL_ACCESS_TOKEN = '{{ url('lightning_api_accesstoken_accesstoken', {'id': id, 'code': code}) }}';
            Lightning.URL_LISTS = '{{ url('lightning_api_accountlist_index', {'id': id}) }}';
        </script>
        {% javascripts
            '@SonatajQueryBundle/Resources/public/jquery-1.8.0.js'
            '@LightningApiBundle/Resources/public/js/*'
            '../vendor/jms/twig-js/twig.js'
        %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
        {% javascripts filter='twig_js'
            '@LightningApiBundle/Resources/views/templates/*'
        %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
    </body>
</html>
